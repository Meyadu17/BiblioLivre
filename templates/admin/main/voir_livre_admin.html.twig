{% extends 'admin/base_admin.html.twig' %}

{% block title %}{{livre.titre}}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('main') }}
{% endblock %}

{% block body %}
    <section class="admin_body_container">
        <div class="un-livre">
            <div class="card mb-3">
                <div class="row g-0">
                    <div class="col-md-4">
                        {% if livre.couverture is not null %}
                            <img src="{{ asset('images/uploads/' ~ livre.couverture) }}" class="img-fluid rounded-start" alt="image {{ livre.titre }}" style="max-width:300px">
                        {% else %}
                            <img src="{{ asset('images/book-logo.jpg') }}" class="img-fluid rounded-start" alt="image {{ livre.titre }}">
                        {% endif %}
                    </div>

                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">{{livre.titre}}</h5>
                            <p class="card-text">{{livre.cycle}} - {{livre.tome}}</p>
                            <p class="card-text">
                                <small class="text-body-secondary"><b>Auteur(s) :</b>
                                    {% for auteur in livre.auteurs %}
                                        {{auteur.prenomnom}}
                                        {% if not loop.last%}
                                            -
                                        {% endif %}
                                    {% endfor %}
                                <b>| Edition :</b> {{livre.edition.libelle}}
                                </small>
                            </p>
                            <p class="card-text">
                                <small class="text-body-secondary"><b>Genre(s) :</b>
                                    {% for genre in livre.genres %}
                                        {{genre.libelle}}
                                        {% if not loop.last%}
                                            -
                                        {% endif %}
                                    {% endfor %}
                                </small>
                            </p>
                            <p class="card-text"><small class="text-body-secondary"><b>Langue :</b> {{livre.langue.libelle}}</small></p>
                            <p class="card-text"><small class="text-body-secondary"><b>ISBN :</b> {{livre.isbn}}</small></p>
                            <p class="card-text"><small class="text-body-secondary"><b>Résumé :</b><br> {{livre.resume}}</small></p>
                            <p><a class="btn btn-outline-light card-link" href="{{ path('app_admin_main_modifier', {'id' : livre.id}) }}" style="color: #3D3D3D;"><i class="ajouter fa-solid fa-pen"></i> Modifier le livre</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}