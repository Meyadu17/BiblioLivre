{% extends 'admin/base_admin.html.twig' %}

{% block title %}BiblioLivre - Livre{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('main') }}
{% endblock %}

{% block body %}
    <section class="admin_body_container">
        <div class="contenaire">
            <h1 class="mb-4">{{ app.request.get('_route') == "app_admin_main_ajouter" ? 'Ajouter' : 'Modifier' }} un livre</h1>

            <div class="un-livre">
                <div class="card mb-3" style="width: 50% ; padding: 8px;">
                    {{ form_start(form) }}

                    <form class="row g-3">
                        <div class="row g-3">
                            <div class="col-md-12">
                                {{ form_row(form.cycle) }}
                            </div>

                            <div class="col-md-12">
                                {{ form_row(form.tome) }}
                            </div>

                            <div class="col-md-12">
                                {{ form_row(form.titre) }}
                            </div>

                            <div class="col-md-12">
                                {{ form_row(form.auteurs) }}
                            </div>

                            <div class="col-md-12">
                                {{ form_widget(form.langue) }}
                            </div>

                            <div class="col-md-12">
                                {{ form_row(form.edition) }}
                            </div>

                            <div class="col-md-12">
                                {{ form_row(form.genres) }}
                            </div>

                            <div class="col-md-12">
                                {{ form_row(form.isbn) }}
                            </div>

                            <div class="col-md-12">
                                {{ form_row(form.resume) }}
                            </div>

                            <div class="col-sm">
                                <button class="btn btn-success" type="submit">Enregistrer</button>
                            </div>
                        </div>
                    </form>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>

{% endblock %}