{% extends 'admin/base_admin.html.twig' %}

{% block title %}Livres{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('main') }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
          crossorigin="anonymous">

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('app_admin') }}
{% endblock %}

{% block body %}

    <section class="admin_body_container">
        <a class="btn btn-info" href="{{ path('app_admin_main_ajouter') }}" style="color: #3D3D3D;"><i class="fa-solid fa-circle-plus" style="color: #3D3D3D;"></i> Nouveau Livre</a>
    </section>
    <br>
    <section class="admin_body_container">
        <form action="{{ path('app_admin_main_rechercher') }}" method="get">
            <div class="input-group mb-3">
                <input type="text" class="form-control" name="q" placeholder="Rechercher un livre..." aria-label="Rechercher" aria-describedby="button-addon2">
                <button class="btn btn-outline-secondary" type="submit" id="button-addon2"><i class="fas fa-search"></i></button>
            </div>
        </form>
    </section>

    <br>

    {% include 'component/card_livre.html.twig' %}

{% endblock %}