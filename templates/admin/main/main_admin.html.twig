{% extends 'admin/base_admin.html.twig' %}

{% block title %}BiblioLivre - Livre{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('main') }}
{% endblock %}

{% block body %}
    <section class="admin_body_container">
        <a class="btn btn-info" href="{{ path('app_admin_main_ajouter') }}" style="color: #3D3D3D;"><i class="fa-solid fa-circle-plus" style="color: #3D3D3D;"></i> Nouveau Livre</a>
    </section>
    <br>
    <section class="admin_body_container">
        <form class="d-flex" role="search">
            <input type="text" id="search" style="border-radius:5px;margin-top: 5px;border-bottom-color: #70DDFF" placeholder="Recherche livre, auteur, genre">
        </form>
    </section>
    <br>
    <div class="un-livre">
        {% for livre in livres %}
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="{{ asset('images/book-logo.jpg') }}" class="img-fluid rounded-start" alt="image">
                    </div>

                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">{{livre.titre}}</h5>
                            <p class="card-text">{{livre.cycle}} - {{livre.tome}}</p>
                            <p class="card-text">
                                <small class="text-body-secondary">
                                    Auteur : {% for auteur in livre.auteurs %}
                                                {{auteur.prenomnom}}
                                                {% if not loop.last%}
                                                    -
                                                {% endif %}
                                            {% endfor %}
                                    <br>Edition : {{livre.edition.libelle}}
                                </small>
                            </p>
                        </div>

                        <div class="card-body">
                            <a class="btn btn-outline-light card-link" href="{{ path('app_admin_main_travaux') }}" style="color: #3D3D3D;"><i class="ajouter fa-solid fa-circle-plus"></i> Ajouter à ma collection</a>
                        </div>
                        <div class="card-body">
                            <a class="btn btn-outline-light card-link" href="{{ path('app_admin_main_voir', {'id' : livre.id}) }}" style="color: #3D3D3D;"><i class="detail fa-solid fa-magnifying-glass"></i> Détail du livre</a>
                            <a class="btn btn-outline-light card-link" href="{{ path('app_admin_main_modifier', {'id' : livre.id}) }}" style="color: #3D3D3D;"><i class="ajouter fa-solid fa-pen"></i> Modifier le livre</a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
