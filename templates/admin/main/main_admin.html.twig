{% extends 'admin/base_admin.html.twig' %}

{% block title %}Livres{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('main') }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
          crossorigin="anonymous">

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('app_admin') }}
{% endblock %}

{% block body %}

    <section class="admin_body_container">
        <a class="btn btn-info" href="{{ path('app_admin_main_ajouter') }}" style="color: #3D3D3D;"><i class="fa-solid fa-circle-plus" style="color: #3D3D3D;"></i> Nouveau Livre</a>
    </section>
    <br>
    <section class="admin_body_container">
        <form action="{{ path('app_admin_main_rechercher') }}" method="get">
            <div class="input-group mb-3">
                <input type="text" class="form-control" name="q" placeholder="Rechercher un livre..." aria-label="Rechercher" aria-describedby="button-addon2">
                <button class="btn btn-outline-secondary" type="submit" id="button-addon2"><i class="fas fa-search"></i></button>
            </div>
        </form>
    </section>

    <br>
    <div class="un-livre">
        {% for livre in livres %}
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-4">
                        {% if livre.couverture is not null %}
                            <img src="{{ asset('images/uploads/' ~ livre.couverture) }}" class="img-fluid rounded-start" alt="image {{ livre.titre }}">
                        {% else %}
                            <img src="{{ asset('images/book-logo.jpg') }}" class="img-fluid rounded-start" alt="image {{ livre.titre }}">

                        {% endif %}
                    </div>

                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">{{livre.titre}}</h5>
                            <p class="card-text">{{livre.cycle}} - {{livre.tome}}</p>
                            <p class="card-text">
                                <small class="text-body-secondary">
                                    Auteur : {% for auteur in livre.auteurs %}
                                                {{auteur.prenomnom}}
                                                {% if not loop.last%}
                                                    -
                                                {% endif %}
                                            {% endfor %}
                                    <br>Edition : {{livre.edition.libelle}}
                                </small>
                            </p>
                        </div>

                        <div class="card-body">
                            <a class="btn btn-outline-light" data-toggle="modal" data-target="#ajouterLivreModal{{ livre.id }}" href="#" class="card-link" style="color: #3D3D3D;">
                                <i class="ajouter fa-solid fa-circle-plus"></i> Ajouter à la collection
                            </a>
                            {% include 'modal/ajouter_livre.html.twig' %}

                        <div class="card-body">
                            <a class="btn btn-outline-light card-link" href="{{ path('app_admin_main_voir', {'id' : livre.id}) }}" style="color: #3D3D3D;">
                                <i class="detail fa-solid fa-magnifying-glass"></i> Détail du livre
                            </a>
                            <a class="btn btn-outline-light card-link" href="{{ path('app_admin_main_modifier', {'id' : livre.id}) }}" style="color: #3D3D3D;">
                                <i class="ajouter fa-solid fa-pen"></i> Modifier le livre
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <!-- Inclure jQuery (si ce n'est pas déjà fait) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Inclure Bootstrap JS (si ce n'est pas déjà fait) -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- JavaScript pour ouvrir le modal -->
    <script>
        $(document).ready(function () {
            // Gérer le clic sur le lien pour ouvrir le modal
            $('a[data-toggle="modal"]').click(function () {
                var targetModal = $(this).data('target');
                $(targetModal).modal('show');
            });

            // Gérer le clic sur le bouton "Fermer" de la boîte de dialogue
            $('.modal .btn-close').click(function () {
                var parentModal = $(this).closest('.modal');
                parentModal.modal('hide');
            });

            $('.modal .btn-secondary').click(function () {
                var parentModal = $(this).closest('.modal');
                parentModal.modal('hide');
            });
        });
    </script>

{% endblock %}