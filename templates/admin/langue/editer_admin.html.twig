{% extends 'admin/base_admin.html.twig' %}

{% block title %}Editer langue{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('main') }}
{% endblock %}

{% block body %}
    <section class="admin_body_container">
        <div class="card mb-3" style="width: 80% ; padding: 8px;">
            <div class="row g-0">
                <h2 class="mb-4">Modifier langue</h2>
                <div class="card-body">
                    {{ form_start(form, {'attr':{'class':'form-floating'}}) }}
                        <div class="form-floating mb-3">
                            {{ form_widget(form.code, {'attr':{'class':'form-control'}}) }}
                            {{ form_label(form.code, 'Code* :', {'attr':{'for':'floatingInput'}}) }}
                            {{ form_errors(form.code) }}
                        </div>

                        <div class="form-floating mb-3">
                            {{ form_widget(form.libelle, {'attr':{'class':'form-control'}}) }}
                            {{ form_label(form.libelle, 'Libelle* :', {'attr':{'for':'floatingInput'}}) }}
                            {{ form_errors(form.libelle) }}
                        </div>

                        <div class="col-sm" style="text-align: center">
                            <button class="btn btn-outline-light card-link" style="color: #3D3D3D; border-color: #3D3D3D" type="submit"><i class="ajouter fa-solid fa-circle-plus"></i> Modifier</button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}