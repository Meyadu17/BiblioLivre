{% extends 'admin/base_admin.html.twig' %}

{% block title %}BiblioLivre{% endblock %}

{% block body %}
    <section class="admin_body_container">
        <a class="btn btn-info" href="{{ path('app_admin_auteur_ajouter') }}">Nouveau Auteur</a>
    </section>
    <br>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success" role="alert">
            {{ message }}
        </div>
    {% endfor %}

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Prénom</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody >
        {% for auteur in auteurs %}
            <tr>
                <th>{{bien.nom}}</th>
                <td>{{bien.prenom}}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_admin_bien_modifier', {'id' : bien.id}) }}">Modifier</a>
                    <a class="btn btn-danger" onclick="return confirm('Êtes-vous sûr ?')" href="{{ path('app_admin_bien_supprimer', {'id' : bien.id}) }}">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
