<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %} BiblioLivre{% endblock %}</title>
        <link rel="icon" href="{{ asset('images/book.png') }}">

        {% block stylesheets %}
            {{ encore_entry_link_tags('app_admin') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app_admin') }}
        {% endblock %}
    </head>

    <body>
        <header>
            <div class="entete">
                <img class="logo" src="{{ asset('images/book.png') }}"  width=3% height=3% >
                <h1> Bibliolivre</h1>
            </div>

            <nav class="navbar navbar-expand-lg" style="background-color: #70DDFF;">
                <div class="container-fluid">
                    <a class="navbar-brand" href="{{ path('app_admin_main_liste') }}">Accueil</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarText">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="{{ path('app_admin_main_travaux') }}"><strong>Mes bibliothèques</strong></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_admin_main_livres') }}"><strong>Mes livres</strong></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_admin_main_liste') }}"><i class="fa-solid fa-gear"></i> Livres</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_admin_auteur_liste') }}"><i class="fa-solid fa-gear"></i> Auteurs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_admin_genre_liste') }}"><i class="fa-solid fa-gear"></i> Genres</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_admin_langue_liste') }}"><i class="fa-solid fa-gear"></i> Langues</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_admin_edition_liste') }}"><i class="fa-solid fa-gear"></i> Editeurs</a>
                        </li>
                    </ul>
                    <span class="navbar-text">
                        <a class="nav-link" href="{{ path('app_main_livres') }}">Visiteur</a>
                    </span>
                    </div>
                </div>
            </nav>
        </header>

        <main>

        {% block body %}{% endblock %}
        
        </main>
        <footer class="footer">

            <div>
                <ul class="pied-page">
                    <li><a href="{{ path('app_admin_main_liste') }}">Accueil</a></li>
                    <li><a href="{{ path('app_admin_main_mentions') }}">Mentions légales</a></li>
                    <li><a href="{{ path('app_admin_main_travaux') }}">Contact</a></li>
                </ul>

                <p class="text-center">Copyright @2023 | Create by Meya</p>

            </div>

        </footer>
    </body>
</html>
