{% extends 'base.html.twig' %}

{% block title %}Bibliotèques{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('main') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <section class="admin_body_container">
        <a class="btn btn-info" href="{{ path('app_bibliotheque_ajouter') }}" style="color: #3D3D3D;"><i class="fa-solid fa-circle-plus" style="color: #3D3D3D;"></i> Nouvelle bibliothèque</a>
    </section>

    <section class="admin_body_container">
        <div class="card mb-3" style="width: 80% ; padding: 8px;">
            <div class="row g-0">
                <h2 class="mb-4">Liste des mes bibliothèques</h2>
                <div class="card-body">
                    <div class="accordion" id="accordionPanelsStayOpenExample">
                        {% for bibliotheque in bibliotheques %}
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseThree" aria-expanded="false" aria-controls="panelsStayOpen-collapseThree">
                                        {{bibliotheque.nom}}
                                        <a href="{{ path('app_bibliotheque_modifier', {'id' : bibliotheque.id}) }}"><i class="fa-solid fa-pen" style="padding: 0 20px"></i></a>
                                        <a href="{{ path('app_bibliotheque_supprimer', {'id' : bibliotheque.id}) }}"><i class="delete fa-solid fa-trash" style="padding: 0 20px"></i></a>
                                    </button>
                                </h2>
                                <div id="panelsStayOpen-collapseThree" class="accordion-collapse collapse">
                                    <div class="accordion-body">
                                        <table class="table table-striped" title="Biblio 1">
                                            <thead>
                                            <tr>
                                                <th scope="col">Cycle</th>
                                                <th scope="col">Titre</th>
                                                <th scope="col">Auteur</th>
                                                <th scope="col">Genre</th>
                                                <th scope="col">Action</th>
                                            </tr>
                                            </thead>
                                            <tbody >
                                            {% for livreBibliotheque in bibliotheque.livreBibliotheques %}
                                                {% set livre = livreBibliotheque.livre %}
                                                <tr>
                                                    <td>{{livre.cycle}}</td>
                                                    <td>{{livre.tome}} - {{livre.titre}}</td>
                                                    <td>
                                                        {% for auteur in livre.auteurs %}
                                                            {{auteur.prenomnom}}
                                                            {% if not loop.last%}
                                                                -
                                                            {% endif %}
                                                        {% endfor %}
                                                    </td>
                                                    <td>
                                                        {% for genre in livre.genres %}
                                                            {{genre.libelle}}
                                                            {% if not loop.last%}
                                                                -
                                                            {% endif %}
                                                        {% endfor %}
                                                    </td>
                                                    <th>
                                                        <a class="btn btn-outline-light" href="{{ path('app_main_voir', {'id' : livre.id}) }}" class="detail card-link" style="color: #3D3D3D;"><i class="detail fa-solid fa-magnifying-glass"></i> Détail du livre</a>
                                                    </th>
                                                </tr>
                                            {% endfor %}

                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>

                </div>
            </div>
        </div>
    </section>
{% endblock %}
